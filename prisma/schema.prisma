generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your models here
model TimelineEntry {
  id        Int      @id @default(autoincrement())
  type      String
  mediaUrl  String?
  text      String?
  preview   String?
  createdAt DateTime @default(now())
}